{
    "contact": {
        "enabled": true,
        "dhat": 0.001,
        "use_convergent_formulation": true
    },
    "space": {
        "advanced": {
            "bc_method": "sample"
        }
    },
    "solver": {
        "linear": {
            "solver": ["Eigen::PardisoLLT", "Eigen::CholmodSupernodalLLT"]
        },
        "augmented_lagrangian": {
            "nonlinear": {
                "x_delta": 1e-3,
                "grad_norm": 1e-8
            }
        },
        "nonlinear": {
            "line_search": {
                "method": "RobustArmijo",
                "use_grad_norm_tol": 0
            },
            "solver": "Newton",
            "x_delta": 1e-3,
            "grad_norm": 1e-8
        },
        "advanced": {
            "lump_mass_matrix": false
        }
    },
    "output": {
        "json": "sim.json",
        "log": {
            "path": "log.txt"
        },
        "paraview": {
            "file_name": "sim.pvd",
            "options": {
                "material": true,
                "body_ids": true,
                "velocity": false,
                "contact_forces": false,
                "friction_forces": false,
                "scalar_values": true,
                "tensor_values": false,
                "discretization_order": false,
                "nodes": false
            },
            "surface": false,
            "volume": true,
            "vismesh_rel_area": 1e7
        },
        "advanced": {
            "save_solve_sequence_debug": false,
            "save_time_sequence": true
        },
        "restart_json": "restart_{:03d}.json",
        "data": {
            "rest_mesh": "restart_mesh_{:03d}.msh",
            "state": "restart_{:03d}.hdf5"
        }
    }
}